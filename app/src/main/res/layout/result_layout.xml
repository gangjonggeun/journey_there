<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/result_backgroud"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/result_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="150dp"
        android:layout_weight="1"
        android:background="#D3F2ED"
        android:orientation="vertical"
        android:padding="20dp">


        <ViewFlipper
            android:id="@+id/flipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/result_iv1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:scaleType="matrix"
                    android:src="@drawable/result_example"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#ffff"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/result_name1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="강릉 해천 해수욕장"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:gravity="center"></TextView>

                    <TextView
                        android:id="@+id/result_text1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="강릉 해천 해수욕장"
                        android:textColor="#212529"
                        android:textSize="25sp"
                        android:textStyle="italic"></TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/result_iv2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:scaleType="matrix"
                    android:src="@drawable/result_example"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#ffff"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/result_name2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="강릉 해천 해수욕장"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:gravity="center"></TextView>

                    <TextView
                        android:id="@+id/result_text2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="강릉 해천 해수욕장"
                        android:textColor="#212529"
                        android:textSize="25sp"
                        android:textStyle="italic"></TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/result_iv3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:scaleType="matrix"
                    android:src="@drawable/result_example"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#ffff"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/result_name3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="강릉 해천 해수욕장"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:gravity="center"></TextView>

                    <TextView
                        android:id="@+id/result_text3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="강릉 해천 해수욕장"
                        android:textColor="#212529"
                        android:textSize="25sp"
                        android:textStyle="italic"></TextView>
                </LinearLayout>
            </LinearLayout>
        </ViewFlipper>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="140dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"></LinearLayout>

    <ImageButton
        android:id="@+id/reuslt_leftBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/standard"
        android:layout_toLeftOf="@+id/standard"

        android:background="@android:color/transparent"
        android:src="@drawable/resultbtn_left"></ImageButton>

    <ImageButton
        android:id="@+id/reuslt_rightBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/standard"
        android:layout_toRightOf="@+id/standard"

        android:background="@android:color/transparent"
        android:src="@drawable/resultbtn_right"></ImageButton>

    <ImageButton
        android:id="@+id/homeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="7"
        android:background="@android:color/transparent"
        android:src="@drawable/result_home2"
        android:textSize="30sp"></ImageButton>

</RelativeLayout>